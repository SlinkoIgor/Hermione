{
  "name": "snitch-electron",
  "version": "1.0.0",
  "description": "Electron app for Snitch API",
  "main": "src/main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/snitch.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.3.3",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.snitch.app",
    "productName": "Snitch",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "src/assets/icon.png"
    },
    "files": [
      "src/**/*",
      "../src/**/*",
      "../.venv/**/*"
    ],
    "extraResources": [
      {
        "from": "../src",
        "to": "src",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../.venv",
        "to": ".venv",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": null
  }
}
